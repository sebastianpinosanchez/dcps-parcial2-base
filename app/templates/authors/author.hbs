<p>
    <strong>{{this.model.username}}</strong>
</p>
<img src={{this.model.profilePicture}} alt="image">
<p>
    <strong>First name: </strong>{{this.model.firstName}}
</p>

<p>
    <strong>Last name: </strong>{{this.model.lastName}}
</p>

<p>
    <strong>Email: </strong>{{this.model.email}}
</p>

<p>
    <strong>Posts: </strong>
</p>
<table>

    <tr>
        <th></th>
        <th>title</th>
        <th>Published date</th>
        <th>Content</th>
    </tr>

    {{#each this.model.posts as |post|}}
    <tr>

        <td>
            <button type="button" {{action 'deletePost' post}}>Delete Post</button>
        </td>
        <td>{{post.title}}</td>
        <td>{{post.publishedAt}}</td>
        <td>{{post.content}}</td>
    </tr>

    {{else}}
    <p>
        <strong>This author don't have posts</strong>
    </p>
    {{/each}}
</table>
{{outlet}}